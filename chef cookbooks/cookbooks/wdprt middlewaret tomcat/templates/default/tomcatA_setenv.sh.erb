#!/bin/sh
#==========================================================
# Tomcat Env file
#==========================================================
# Do Not edit this file. All settings are in the Middleware
# conf directory /opt/middleware/tomcat_config/tomcatA
#=========================================================

export JVM_NAME=tomcatA
export HOSTNAME=`hostname -s`

# Load the middleware values
if [ -f /opt/middleware/tomcat_config/tomcatA/middleware_variables.conf ]; then
  source /opt/middleware/tomcat_config/tomcatA/middleware_variables.conf
fi

# Load the JVM options if they are there if not then we will put a generic setting
if [ -f /opt/middleware/tomcat_config/tomcatA/jvm_options.conf ]; then
  source /opt/middleware/tomcat_config/tomcatA/jvm_options.conf
else
  CATALINA_OPTS="-Xms1024m -Xmx2048m -Xss256k -XX:MaxPermSize=256M -Djava.awt.headless=true -Djava.net.preferIPv4Stack=true -DTCAPP=tomcatA"
fi

# Load the monitoring options
if [ -f /opt/middleware/tomcat_config/tomcatA/monitoring_options.conf ]; then
  source /opt/middleware/tomcat_config/tomcatA/monitoring_options.conf
fi

# Load the application options
if [ -f /opt/middleware/tomcat_config/tomcatA/application_options.conf ]; then
  source /opt/middleware/tomcat_config/tomcatA/application_options.conf
fi
