alias stopallA="/etc/init.d/tomcatA1 stop; /etc/init.d/tomcatA2 stop"
alias startallA="/etc/init.d/tomcatA1 start; /etc/init.d/tomcatA2 start"
alias restartallA="/etc/init.d/tomcatA1 restart; /etc/init.d/tomcatA2 restart"
alias startB1="/etc/init.d/tomcatB1 start"
alias stopB1="/etc/init.d/tomcatB1 stop"
alias killB1="/etc/init.d/tomcatB1 kill"
alias restartB1="/etc/init.d/tomcatB1 restart"
alias statusB1="/etc/init.d/tomcatB1 status"
