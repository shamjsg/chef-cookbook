#!/bin/sh
#==========================================================
# Tomcat Env file
#==========================================================
# Do Not edit this file. All settings are in the Middleware
# conf directory /opt/middleware/tomcat_config/tomcatA
#=========================================================

export JVM_NAME=tomcatA2
export HOSTNAME=`hostname -s`
export GCLOG_PATH="/var/log/tomcatA/tomcatA2"

if [ -f /opt/middleware/tomcatA/common/chef.conf ]; then
  source /opt/middleware/tomcatA/common/chef.conf
fi

# Load the middleware values
if [ -f /opt/middleware/tomcatA/common/middleware_variables.conf ]; then
  source /opt/middleware/tomcatA/common/middleware_variables.conf
fi

# Load the JVM options if they are there if not then we will put a generic setting
if [ -f /opt/middleware/tomcatA/common/jvm_options.conf ]; then
  source /opt/middleware/tomcatA/common/jvm_options.conf
else
  CATALINA_OPTS="-Xms1024m -Xmx2048m -Xss256k -XX:MaxPermSize=256M -Djava.awt.headless=true -Djava.net.preferIPv4Stack=true -DTCAPP=tomcatA2"
fi

# Load the monitoring options
if [ -f /opt/middleware/tomcatA/common/monitoring_options.conf ]; then
  source /opt/middleware/tomcatA/common/monitoring_options.conf
fi

# Load the application options
if [ -f /opt/middleware/tomcatA/common/application_options.conf ]; then
  source /opt/middleware/tomcatA/common/application_options.conf
fi
